{
    "compilerOptions": {
        "module": "commonJs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "outDir": "./dist",
        "target": "es6",
        "sourceMap": true,
        "lib": [
          "es2016"
        ],
        "ignoreDeprecations": "5.0"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./**/*.spec.ts"
    ]
}